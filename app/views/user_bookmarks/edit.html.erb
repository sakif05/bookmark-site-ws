<div class="row-fluid">
  <h2><%= "Edit Bookmark for "%>
  <% if(@playlist == current_user.default_list) %>
    <%= link_to current_user.username, current_user%></h2>
  <% else %>
    <%= link_to @playlist.name, @playlist %>
  <% end %>
</h2>
<%= form_for @user_bookmark, :url => [@playlist, @user_bookmark] , :method => :put do |f|%>
  <% if @user_bookmark.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% @user_bookmark.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :bookmark_name %><br />
  <%= f.text_field :bookmark_name %><br /><br />
  <%= f.fields_for :bookmark_url, @bookmark_url do |f_bu| %>
    <%= f_bu.label :url %><br />
    <%= f_bu.text_field :url %>
  <% end %>
  <div class="actions">
    <%= f.submit 'Update Bookmark' %>
  </div>
<% end %>
</div>